<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- Connection Section -->

    <!-- Status Section -->

    <!-- Video Display Section -->


    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="517dp"
        android:layout_weight="1"
        android:background="@android:drawable/dialog_frame"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Video Stream"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_frame_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frame Info: No frame data"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Device Resolution: Loading..."
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Status Information"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:contentDescription="Video frame display"
                android:scaleType="fitCenter" />

        </ScrollView>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Status: Ready"
            android:textSize="14sp" />

    </LinearLayout>
    <!-- Controls Layout - Bottom section -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="#1a1a1a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Server Input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/serverTextFieldLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="75">
                <!-- Layout weight is really nice because it prevents fixed-size elements, instead adapting to screen sizes. -->

                <!-- IP Input | Keep the 'match-parent' in. use the parent to adjust the size! -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/serverInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="IP:Port (optional)"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Connect Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="5"
                android:drawableLeft="@drawable/connect_icon"

                android:text="Help"
                android:textStyle="bold"
                android:textColor="#000000"
                />

            <!-- Servers Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/serversButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="5"
                app:icon="@drawable/servers_icon"
                android:text="Servers" />
            <!-- Using app:icon over android:drawable makes it green -->

            <!-- Hide Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/hideButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0"
                android:gravity="center"
                app:icon="@drawable/hide_icon" />

            <!-- Disconnect Button (initially hidden) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/disconnectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="#f44336"
                android:text="Disconnect"
                android:visibility="gone" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>