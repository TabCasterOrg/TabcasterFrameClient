<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Status Information -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Ready"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resolution: Not set"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_frame_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frame: No data"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <!-- Video Display -->
    <ImageView
        android:id="@+id/iv_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:contentDescription="Stream display" />

    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="#1a1a1a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Server Input -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/serverTextFieldLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="75">
                <!-- Layout weight is really nice because it prevents fixed-size elements, instead adapting to screen sizes. -->

                <!-- IP Input | Keep the 'match-parent' in. use the parent to adjust the size! -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/serverInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="IP Address"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Connect Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="5"
                android:drawableLeft="@drawable/connect_icon"

                android:text="Help"
                android:textStyle="bold"
                android:textColor="#000000"
                />

            <!-- Disconnect Button (initially hidden) -->
            <!-- Eventually, maybe, make this a state of the connected button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/disconnectButton"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="7"
                android:backgroundTint="#c11003"
                android:text="Disconnect"
                android:visibility="visible" />

            <!-- Servers Button -->
            <!--            <com.google.android.material.button.MaterialButton-->
            <!--                android:id="@+id/serversButton"-->
            <!--                style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_marginStart="8dp"-->
            <!--                android:layout_marginEnd="8dp"-->
            <!--                android:layout_weight="5"-->
            <!--                app:icon="@drawable/servers_icon"-->
            <!--                android:text="Servers" />-->
            <!-- Using app:icon over android:drawable makes it green -->

            <!-- Hide Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/hideButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0"
                android:gravity="center"
                app:icon="@drawable/hide_icon" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>